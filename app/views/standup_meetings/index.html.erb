<div class="max-w-4xl mx-auto p-4">
  <div class="text-sm breadcrumbs max-w-xs">
    <ul>
      <li><%= link_to "Standup Groups", standup_meeting_groups_path %></li> 
      <li><%= link_to @standup_meeting_group.name, standup_meeting_group_path(@standup_meeting_group) %></li> 
      <li><%= @meeting_date %></li>
    </ul>
  </div>
  <div class="py-4 flex justify-between ">
    <h1 class="text-3xl font-bold">Standup - <%= @meeting_date %></h1>
    <%= link_to 'Back', :back, class: 'link text-primary text-lg mt-2' %>
  </div>
  <div class="divider"></div>
  <% @standup_meetings.each do |standup_meeting| %>
    <%= render StandupMeeting::MeetingRowComponent.new(standup_meeting:) %>
  <% end %>
</div>